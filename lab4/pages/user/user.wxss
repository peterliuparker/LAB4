page{
    height:100%;
  }
  .background {
    width: 100%;
    height: 100%;
    position:fixed; 
    background-size:100% 100%;
    z-index: -1;
  }
  
  .userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #aaa;
  }
  
  .userinfo-avatar {
    overflow: hidden;
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
  }
  
  .usermotto {
    margin-top: 200px;
  }

  .login {
    font-size: 40rpx;
    border-radius: 20rpx;
    background-color: #343135;
    color: #e1bb7c;
  }
  .login:not([size="mini"]) {
    width: 200rpx;
    height: 95rpx;
  }