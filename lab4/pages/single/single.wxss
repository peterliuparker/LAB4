.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}

.top{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 50rpx;
  color: #e1bb7c;
}
.point1 image,.point2 image{
  width: 50px;
  height: 50px;
}
.point1 image{
  display: block;
  margin:45px auto;
}
.point2 image{
   margin-top: 50px;
   margin-left: 70px;
}

.btn {
    position: absolute;
    bottom: 110rpx;
    
    background-color: #343135;
    color: #e1bb7c;
    border-radius: 30rpx;
    line-height: 60px;
    text-align: center;
    font-size: 30px;
}
.btn:not([size="mini"]) {
  width: 70%;
  height:60px;
}